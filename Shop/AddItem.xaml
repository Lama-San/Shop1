<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.AddItem"
             Title="AddItem">
    <Grid>
        <StackPanel>
            <TextBox x:Name="ProductNameTextBox" Text="Название продукта" Margin="10"/>
            <Slider x:Name="PriceSlider" Minimum="0" Maximum="100" Value="10" Margin="10"/>
            <TextBlock Text="Цена" Margin="10" />
            <TextBlock x:Name="PriceValue" Text="$10.00" Margin="10"/>
            <Button Content="Добавить продукт" Click="AddProductButton_Click" Margin="10"/>
            <ListView x:Name="ItemsListView" Margin="10" SelectionChanged="ItemsListView_SelectionChanged"/>
        </StackPanel>
    </Grid>
</ContentPage>