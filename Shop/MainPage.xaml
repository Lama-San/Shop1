<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.MainPage">

    <Grid>
        <StackLayout Padding="20">

            <Label Text="Добавить новый продукт" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <SearchBar Placeholder = "Поиск ..." HorizontalOptions="Center" FontSize="20" />

            <Button Text="Добавить продукт" BackgroundColor="Green" Clicked="AddProductClicked"/>

            <Button Text="Удалить продукт" BackgroundColor="Red" Clicked="DeleteProductClicked" />

            <Button Text="Редактировать продукт" BackgroundColor="Blue" Clicked="EditProductClicked"/>
            
            <Label Text="Список продуктов:" FontSize="20" Margin="0,20,0,0"/>

            

            <ListView x:Name="ProductsListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </Grid>

</ContentPage>
